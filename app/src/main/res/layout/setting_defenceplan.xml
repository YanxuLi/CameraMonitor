<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/cancel"
            android:background="@drawable/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间段"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/ok"
            android:layout_alignParentRight="true"
            android:background="@drawable/ok"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/defenceplan_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:text="开启布防计划"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_defence_plan"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dip"
        android:background="#50666666"/>

    <LinearLayout
        android:id="@+id/plantime_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/rl_starttime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:paddingLeft="5dp"
            android:padding="10dp"
            android:background="@color/white">
            <TextView
                android:text="开始时间"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_startime"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right_my_gray"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_starttime"
                android:text=""
                android:layout_marginLeft="37.0dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_startime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dip"
            android:background="#50666666"/>
        <RelativeLayout
            android:id="@+id/rl_endtime"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:clickable="true"
            android:padding="10dp"
            android:background="@color/white">
            <TextView
                android:text="结束时间"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_endtime"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right_my_gray"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_endtime"
                android:text=""
                android:layout_marginLeft="37.0dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <CheckBox
                android:id="@+id/nextday"
                android:text="第二天"
                android:paddingTop="5dp"
                android:layout_below="@id/tv_endtime"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dip"
            android:background="#50666666"/>
        <RelativeLayout
            android:id="@+id/rl_doubletime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:padding="10dp"
            android:background="@color/white">
            <TextView
                android:text="重复时间"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_doublingtime"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right_my_gray"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_doubletime"
                android:text=""
                android:layout_marginLeft="37.0dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_doublingtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
